{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@webapps-common": ["src/w4-webapps-common"],
      "@webapps-common/*": ["src/w4-webapps-common/*"],
      "@components/*": ["src/components/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/utils/*"],
      "@pages": ["src/pages"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}